<?xml version="1.0"?>
<odoo>

    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="price"/>
                <field name="status"/>
                <field name="salesperson_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>


    <record id="estate_test_tree" model="ir.ui.view">
        <field name="name">estate.test.tree</field>
        <field name="model">estate.test</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.test</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_type_model_action" model="ir.actions.act_window">
        <field name="name">Property types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_property_tag_model_action" model="ir.actions.act_window">
        <field name="name">Property tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_test_view_form" model="ir.ui.view">
        <field name="name">estate.test.tree</field>
        <field name="model">estate.test</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <group >
                            <field name="tag_ids" widget="many2many_tags"/>

                        </group>
                        <separator/>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>

                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="state"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">

                                <tree name="offer_ids">
                                    <field name="offer_ids"/>
                                    <!--  <field name="offer_ids.price"/>
                                    <field name="offer_ids.salesperson_id"/>
                                    <field name="offer_ids.date_deadline"/> -->
                                </tree>

                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="buyer_id"/>
                                    <field name="salesperson_id"/>

                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="estate_test_view_search" model="ir.ui.view">
        <field name="name">estate.test.search</field>
        <field name="model">estate.test</field>
        <field name="arch" type="xml">
            <search >
                <field name="name" />
                <field name="postcode"/>
                <field name="expected_price"/>
                <separator/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <separator/>
                <filter string="New and offer received" name="available" domain="['|',('state', '=', 'new'),('state','=','offer_received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>